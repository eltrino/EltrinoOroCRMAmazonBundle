{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as macros %}

{% oro_title_set({params : {"%order.incrementId%":  entity.amazonOrderId} }) %}

{% block pageHeader %}
    {% set breadcrumbs = {
    'entity': entity,
    'indexPath': path('orocrm_amazon_order_index', {id: entity.channel.id}),
    'indexLabel': 'orocrm.amazon.order.entity_plural_label'|trans,
    'entityTitle': 'orocrm.amazon.order.entity_label'|trans ~ ' ' ~ entity.amazonOrderId
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}


    {% set generalSubblocks = [] %}

    {% set orderInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'url': path('orocrm_amazon_order_widget_info', {id: entity.id}),
            'title': 'orocrm.amazon.order_information'|trans
        }) }}
    {% endset %}

    {% set generalSubblocks = generalSubblocks|merge([{'data' : [orderInformationWidget] }]) %}

    {% set orderItemsWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'url': path('orocrm_amazon_order_widget_items', {id: entity.id})
        }) }}
    {% endset %}

    {% set dataBlocks = [
    {
    'title': 'General Information'|trans,
    'class': 'active',
    'subblocks': generalSubblocks
    },
    {
    'title': 'orocrm.amazon.order_item.entity_plural_label'|trans,
    'subblocks': [
    {'data' : [orderItemsWidget] }
    ]
    },
    ] %}

    {% set id = 'amazonOrderView' %}
    {% set data = {'dataBlocks': dataBlocks} %}
    {{ parent() }}
{% endblock content_data %}
